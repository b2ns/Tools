### 设置环境变量 ###
if [ -d "$HOME/Downloads/node/bin" ] ; then
    PATH="$HOME/Downloads/node/bin:$PATH"
fi

### 设置别名 ###
alias rm='rm -i'
alias q='exit'
alias sss='shutdown now'

alias v='gvim'
alias e='gedit'
alias c='code'

### 其他 ###
# git分支名展示
if [ -f "./.git-prompt.sh" ];then
  source ./.git-prompt.sh
  green=$'\e[1;32m'
  cyan=$'\e[1;36m'
  blue=$'\e[1;34m'
  purple=$'\e[1;35m'
  normal=$'\e[m'
  PS1='\[$green\]\u@\[$purple\]\h:\[$blue\]\w\[$cyan\]$(__git_ps1 "(%s)")\[$normal\]\\$ '
fi
